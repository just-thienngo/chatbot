<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Bubble bên trái -->
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/red"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/typingAnimation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:visibility="gone"
            app:lottie_rawRes="@raw/typing_anim"
            app:lottie_loop="true"
            app:lottie_autoPlay="false" />

    </LinearLayout>

    <!-- Bubble bên phải -->
    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/half_transparent"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
