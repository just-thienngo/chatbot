<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/introductionFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.auth.ui.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup"
        >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/from_bottom" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.auth.ui.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/from_bottom" />
    </fragment>
    <fragment
        android:id="@+id/introductionFragment"
        android:name="com.example.auth.ui.IntroductionFragment"
        android:label="IntroductionFragment"
        tools:layout="@layout/fragment_introduction"
        >
        <action
            android:id="@+id/action_introductionFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/enter_right_to_left"
            app:exitAnim="@anim/enter_right_to_left" />
    </fragment>
</navigation>